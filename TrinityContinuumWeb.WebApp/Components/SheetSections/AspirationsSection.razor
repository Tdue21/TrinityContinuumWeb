@using TrinityContinuum.WebApp.Components.Components
@inherits AspirationsSectionBase

<div class="col-6 container">

    <SectionHeading>Aspirations</SectionHeading>

    <div class="column aspirations">
        @foreach (var asp in Model.Aspirations)
        {
            <div>
                <span>@(asp.IsLongTerm ? "(Long)" : "(Short)") @asp.Description</span>
            </div>
        }
    </div>

</div>